{
  "compilerOptions": {
    "target": "esnext", // or "es6"
    "module": "commonjs",
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true // Generate .d.ts files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}